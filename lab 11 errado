#include<iostream>
using namespace std;
const int MAX=100;

void identidade(int matriz [][MAX], int n )
{
    for(int i=0; i<n; i++)
    {
        for(int j=0; j<n; j++)
        {
            if (i==j)
            {
                matriz[i][j]=1;
            }
            else
            {
                matriz[i][j]=0;
            }
        }
    }
}
void trocalinha (int matriz[][MAX], int n, int l1, int l2){
  int  aux =0;

 for(int i=0; i<n; i++)
    {
        for(int j=0; j<n; j++)
        {
            aux = matriz[l1][j];
            matriz[l1][j]= matriz[l2][j];
            matriz[l2][j]=aux;
        }
}
}
void trocacoluna (int matriz[][MAX], int n, int c1, int c2){
  int  aux =0;

 for(int i=0; i<n; i++)
    {
        for(int j=0; j<n; j++)
        {
            aux = matriz[i][c1];
            matriz[i][c1]= matriz[i][c2];
            matriz[i][c2]=aux;
        }
}
}
void exibir (int matriz[][MAX], int n){
for(int i=0;i<n;i++){
    for(int j=0; j<n;j++){
        cout<<matriz[i][j]<<" ";
    }

}
cout<<endl;
}
int main (){
int matriz[MAX][MAX], n, l1,l2, c1, c2;
cout<<"Insira o tamanho da matriz:";
cin>>n;
cout<<"insira a troca de linha desejada:";
cin>>l1>>l2;
cout<<"Insira a troca de coluna desejada:";
cin>>c1>>c2;

trocalinha(matriz,n,l1,l2);
exibir (matriz,n);
trocacoluna(matriz,n,c1,c2);
return 0;
}
