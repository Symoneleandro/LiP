#include<iostream>
using namespace std;
int tri(int n);
int main()
{
    int x;
    cout<<"insira um valor: \n";
    cin>>x;
    cout<< tri(x)<<endl;
    return 0;
}
int tri(int n)
{
    if(n>=4)
    {
        return tri(n-1)+tri(n-2)+tri(n-3);
    }
    else if( n==1)
    {
        return 1;
    }
    else if(n==2)
    {
        return 1;
    }
    else
    {
        return 2;
    }
}
