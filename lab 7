  Questão 1 
  
  #include<iostream>
using namespace std;
bool par(int n);
int main()
{
    int x;

    cout<<"insira um valor: \n";
    cin>>x;
    cout<<par(x)<<endl;
    return 0;
}
bool par(int n)
{
    if(n==0)
    {
        return true;
    }
    else if(n==1)
    {
        return false;
    }
    else
    {
        return par(n-2);
    }
}



Questão 3

#include<iostream>
using namespace std;
int tri(int n);
int main()
{
    int x;
    cout<<"insira um valor: \n";
    cin>>x;
    cout<< tri(x)<<endl;
    return 0;
}
int tri(int n)
{
    if(n>=4)
    {
        return tri(n-1)+tri(n-2)+tri(n-3);
    }
    else if( n==1)
    {
        return 1;
    }
    else if(n==2)
    {
        return 1;
    }
    else
    {
        return 2;
    }
}

Questão 2 

#include<iostream>
using namespace std;
int mdc(int x, int y);
int main(){
int a, b, valor;
cout<<"insira um valor: \n";
cin>>a>>b;
cout<<mdc(a,b)<<endl;
return 0;
}
int mdc(int x, int y){
    int aux, resto;
    if(y ==0){
        return x;
    }
    else{
        resto = x%y ;
        aux = y;
        y= resto;
        x= aux;
        return mdc(x,y);
    }
}





